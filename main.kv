MDFloatLayout:

  MDTopAppBar:
    id: new_particpant_label
    title: "[u][b][size=48]Create new Participant[/size][/b][/u]"
    pos_hint: {"top": 1}

  MDTabs:
    id: tabs
    pos_hint: {"top": .9}

    Tab:
      title: "Tab 1"
      ScrollView:
        pos_hint: {"center_x": .5, "center_y": .58}
        size_hint: .9, .8
        MDGridLayout:
          id: container
          cols: 2
          spacing: "10dp"
      MDRoundFlatIconButton:
        icon: "animation"
        text:"test"
        pos_hint: {"x": .1, "y": .16}
        on_release: app.switch_tab_by_object()


    Tab:
      title: "Tab 2"
      ScrollView:
        pos_hint: {"center_x": .5, "center_y": .58}
        size_hint: .9, .8
        MDGridLayout:
          id: containertwo
          cols: 2
          spacing: "10dp"
      MDRoundFlatIconButton:
        icon: "animation"
        text:"test"
        pos_hint: {"x": .1, "y": .16}
        on_release: app.switch_tab_by_object()




  MDFloatingActionButton:
    icon: "content-save-outline"
    elevation_normal: 12
    pos_hint: {"x": .45, "y": .04}


