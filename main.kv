<MainScreen>:
    MDFloatLayout:
        MDTopAppBar:
            title: "DocAutomation"
            pos_hint: {"center_x": .5, "top": 1}
            elevation: 10
            right_action_items:
                [
                ["tag-multiple", lambda x: app.change_tags(), "Change Tags"],
                ["form-textbox-password", lambda x: app.change_categories(), "Change Categories"],
                ["cogs", lambda x: app_change_templates_path, "Change templates path"]
                ]
        MDTabs:
            id: tabs
            pos_hint: {"top": .9}
            tab_bar_height: "25dp"

<TagSettingsScreen>:
    MDFloatLayout:
        MDGridLayout:
            id: new_tag_grid
            cols: 3
            spacing: 10
            size_hint: .8, .2
            pos_hint: {"center_x": .44, "center_y": .85}

            MDTextField:
                id: tag_field
                hint_text: "Tag"
            MDTextField:
                id: type_field
                hint_text: "Type"
            MDTextField:
                id: description_field
                hint_text: "Description"
                
        MDRaisedButton:
            text: "Submit"
            pos_hint: {"right": 0.97, "center_y": .9}
            on_release: app.add_new_tag(tag_field.text, type_field.text, description_field.text)

        ScrollView:
            size_hint: .9, .6
            pos_hint: {"center_y": .5}
            MDList:
                id: taglist
        MDFloatingActionButton:
            icon: "floppy"
            pos_hint: {"x": .5, "y": .05}
            on_release: app.root.current = "MainScreen"

<CategorySettingsScreen>:
    MDFloatLayout:
        MDTextField:
            size_hint: 1, .1
            pos_hint: {"center_x": .5, "center_y": .9}
            hint_text: "Category"
            id: category_field
        MDTextField:
            size_hint: 1, .1
            pos_hint: {"center_x": .5, "center_y": .8}
            hint_text: "Description"
            id: category_description_field
        MDRaisedButton:
            text: "Submit"
            on_release: root.add_new_category()
            size_hint: .2, .1
            pos_hint: {"right": 1, "center_y": .9}
        ScrollView:
            size_hint: 1, .8
            pos_hint: {"center_y": .5}
            MDList:
                id: categorylist

<IndividualTab>:
    MDFloatLayout:
        ScrollView:
            pos_hint: {"center_x": .5, "center_y": .58}
            size_hint: .9, .8
            MDGridLayout:
                id: container
                cols: 2
                spacing: "10dp"

        MDRoundFlatIconButton:
            icon: "animation"
            text:"Previous"
            pos_hint: {"x": .05, "y": .16}
        MDRoundFlatIconButton:
            icon: "animation"
            text:"Next"
            pos_hint: {"x": .85, "y": .16}

<TagListItem>:
    id: the_tag_list_item

    IconLeftWidget:
        icon: "tag"
        theme_text_color: "Custom"

    IconRightWidget:
        icon: "trash-can-outline"
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1